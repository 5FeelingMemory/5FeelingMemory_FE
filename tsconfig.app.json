{
    "extends": "./tsconfig.json",
    "include": ["src", "global.d.ts"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "target": "ES2022",
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "types": ["vite-plugin-svgr/client"], //svg를 컴포넌트로 만들기 위한 내용 -> 근데 없어도 오류가 안난다. (해결!)
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "strictNullChecks": true, //null 및 undefined를 보다 명확하게 체크
        "noImplicitAny": true //
    }
}
